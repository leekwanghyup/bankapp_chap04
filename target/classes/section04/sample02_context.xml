<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	
	<bean id="registerationDao" class="section04.sample02.RegisterationDao"/>
	<bean id="registerationDetails" class="section04.sample02.RegisterationDetails" scope="prototype"/>
	
	<bean class="section04.sample02.RegisterationService"
			c:registerationDao-ref="registerationDao"
			c:registerationDetails-ref="registerationDetails" scope="prototype"/>
</beans>
