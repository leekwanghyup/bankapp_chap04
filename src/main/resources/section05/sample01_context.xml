<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="customDao" class="section05.sample01.CustomDao"/>
	<bean id="customDetails" class="section05.sample01.CustomDetails" scope="prototype"/>
	
	<bean id="customService" class="section05.sample01.CustomService"
		p:customDao-ref="customDao"/>
</beans>


